Vagrant.configure("2") do |config|
  #config.vm.box = "mitchellh/boot2docker"
  config.vm.box = "yungsang/boot2docker"

  vagrant_root = File.dirname(__FILE__)

  #config.ssh.insert_key = false
  config.vm.network "private_network", ip: "192.168.33.10"

  config.vm.synced_folder ".", "#{vagrant_root}", type: "nfs"
  #config.vm.synced_folder "~/.ivy2", "/home/app/.ivy2", type: "nfs", create: true
  #config.vm.synced_folder "~/.pub-cache", "/home/app/.pub-cache", type: "nfs", create: true

  config.vm.network :forwarded_port, host: 8500, guest: 8500
  config.vm.network :forwarded_port, host: 6379, guest: 6379
  config.vm.network :forwarded_port, host: 3000, guest: 3000
  config.vm.network :forwarded_port, host: 1234, guest: 1234
  config.vm.network :forwarded_port, host: 8080, guest: 8080

  config.vm.provider "virtualbox" do |v|
    # On VirtualBox, we don't have guest additions or a functional vboxsf
    # in TinyCore Linux, so tell Vagrant that so it can be smarter.
    v.check_guest_additions = false
    v.functional_vboxsf     = false
    v.name = "boot2docker-vm-vagrant"
    v.memory = 2048
    v.cpus = 2
  end
end
